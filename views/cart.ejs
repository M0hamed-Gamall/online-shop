<%- include('parts/header')  %>
<%- include('parts/navbar')  %>

<h1 class="mb-4">Your Cart</h1>
    
<table class="table table-bordered table-striped text-center font-monospace">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Date Added</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% cartItems.forEach(item => { %>
            <tr>
                <td><a href="/product/<%= item.productId %>" class="text-decoration-none"><%= item.name %></a></td>
                <td>$<%= item.price %></td>
                <td><%= new Date(item.timeStamp).toLocaleString() %></td>
                <td>
                    <form action="/cart/delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="<%= item._id %>">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>
<div class="d-flex justify-content-center  ">
    <form action="/order" method="POST">
      <button type="submit" class="btn btn-primary btn-lg">Order Now</button>
    </form>
</div>
  


<%- include('parts/footer')  %>