<%- include('parts/header') %>
<%- include('parts/navbar') %>

<h1 class="mb-4 text-center">Order List</h1>
<table class="table table-hover table-bordered">
    <thead class="table-dark">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% if (orders && orders.length > 0) { %>
        <% orders.forEach((order, index) => { %>
        <tr>
            <td><%= index + 1 %></td>
            <td><%= order.name %></td>
            <td>$<%= order.price.toFixed(2) %></td>
            <td>
            <form method="POST" action="/admin/manage-orders" class="d-inline">
                <input type="hidden" name="orderId" value="<%= order._id %>">
                <button type="submit" class="btn btn-success">Approve Order</button>
            </form>
            </td>
        </tr>
        <% }) %>
    <% } else { %>
        <tr>
        <td colspan="4" class="text-center">No orders available.</td>
        </tr>
    <% } %>
    </tbody>
</table>

<%- include('parts/footer') %>